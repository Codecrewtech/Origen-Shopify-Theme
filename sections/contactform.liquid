    padding-right:20px;
    width: 48%;vertical-align:top;
    display: inline-block;
}ul.left_align {
  margin-bottom:20px;
    margin-top: 20px;
}
 .main-content .page-width{max-width:100%;padding:0;}
  @media(max-width:768px){
    .contact-form.form-vertical {
    width: 100%;
    display:block;
}
  .contact_form_left{
    padding-right:0;
    width: 100%;
    display:block;
}
  .grid--half-gutters>.grid__item {
    padding-left: 0;
}  
  }
</style>
{% endif %}